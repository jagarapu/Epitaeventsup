{% extends "EventsEventsBundle::layout.html.twig" %}
{% block stylesheets %}
{{ parent() }}     
<link href="{{ asset('bundles/eventsevents/css/loginpage.css') }}" type="text/css" rel="stylesheet" /> 
{% endblock %}

{% block title %}Events Login Page{% endblock title %}
{% block content %}
<div id="main">
<div class="candidatecontent">
{% block fos_user_content %}
{% if error %}
        <div class="flash-error"><b style="color: white">{{ error|trans }}</b></div>
{% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
   {# <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />    #}
     <div class="login-container"> 
         <h1>Events Login Page</h1><br>   
       <form> 
       <label for="username">Login id(Email address or EPITA login)</b> :
       <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
       </label>
       <label for="password">
        <b>Your password </b> : &nbsp;&nbsp;&nbsp;&nbsp;<input type="password" id="password" name="_password" required="required" />
       </label>
        <div class="form-login">
         <input type="submit" class="login login-submit" id="_submit" name="_submit" value="Login" />        
        </div>  
        <br>
        <br>
        <p>Forgot password ? Write to us at : epitaevents2018@gmail.com</p> 
        </form> 
        <div class="login-help">
            <h5>  Registration &nbsp; <a class="text_link" href="{{ path('register') }}"> Click here...</a></h5>
        </div>          
        <br>
        </div>
        </form>        
        {% endblock fos_user_content %}     
         </div>   
        </div>
{% endblock %}            
{#{% endblock %}  #}